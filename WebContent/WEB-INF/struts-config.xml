<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC 
"-//Apache Software Foundation//DTD Struts Configuration 1.3//EN" 
"http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">

<struts-config>
	<form-beans>
		<form-bean name="tela" type="com.crud.form.CrudForm" />
	</form-beans>
	
	<action-mappings>
	   <action path="/Crud"
		type="com.crud.action.CrudAction"
		name="tela">
		<forward name="telaCrud" path="/Jsp/Crud.jsp"/>
	   </action>
	</action-mappings>

</struts-config>